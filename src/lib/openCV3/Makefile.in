# @configure_input@
#################################################

@SET_MAKE@

srcdir = @srcdir@
top_srcdir = @top_srcdir@

OBJECTS	= ApiWrapper.o
LIBRARY = libopenCV-cwrapper.a

CXX      = @CXX@
CPPFLAGS = @CPPFLAGS@
CXXFLAGS += @CXXFLAGS@ @OpenCV_CXXFLAGS@
RANLIB   = @RANLIB@

.PHONY: all clean distclean

all: $(LIBRARY)

$(LIBRARY): $(OBJECTS)
	ar ruv $(LIBRARY) $(OBJECTS)
	$(RANLIB) $(LIBRARY)

%.o: %.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(<) -o $@

clean:
	rm -f $(LIBRARY)
	rm -f $(OBJECTS)

distclean: clean
	rm -rf Makefile
